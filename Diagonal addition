#include <iostream>
using namespace std;

int main() {
    int n;
    int matrix[10][10], primary = 0, secondary = 0;

    cout << "Enter size of square matrix (n x n): ";
    cin >> n;

    cout << "Enter elements of the matrix:\n";
    for(int i = 0; i < n; i++)
        for(int j = 0; j < n; j++)
            cin >> matrix[i][j];

    for(int i = 0; i < n; i++) {
        primary += matrix[i][i];
        secondary += matrix[i][n - i - 1];
    }

    cout << "Sum of primary diagonal: " << primary << endl;
    cout << "Sum of secondary diagonal: " << secondary << endl;

    return 0;
}

OUTPUT-
Sum of primary diagonal: 15
Sum of secondary diagonal: 15
